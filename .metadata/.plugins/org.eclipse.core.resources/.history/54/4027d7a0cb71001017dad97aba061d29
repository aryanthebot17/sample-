	 Optional<Employee> emp21=list.stream().filter((emp)->emp.getCode()==code).map(e->e).findFirst();
	 
	 
	 if(emp21.isEmpty()) {
		 emp21=null;
	//	 System.out.println("no such object exist");
	 }
