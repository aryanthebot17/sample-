package learning_java;

import java.util.HashMap;
import java.util.Map;

import learning_java.Book;



public class BooksInfo{
	
private Map<Integer,Book> hash;

public BooksInfo() {
	  this.hash= new HashMap<Integer,Book>();
}

// for adding new book details;
public void add_book(Book new_book) {
	 hash.put(new_book.getId(),new_book);
}

// for diplaying the particular book detials
public void show(int id) {
	 
	Book new_book =hash.get(id);
	
	new_book.show();
	
	 
}
	
}

