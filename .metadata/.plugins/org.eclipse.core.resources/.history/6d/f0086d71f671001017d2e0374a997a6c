package learning_java;

import java.util.Scanner;



class InvalidMonth extends Exception{

	/**
	 * 
	 */
	private static final long serialVersionUID = 1L;
	
	public InvalidMonth() {
		
		super();
		System.out.println("this is invalid month");
		
	}
	
	
}

 enum Month {
	january,
	feburary,
	march,
	april,
	may,
	june,
	july,
	august,
	september,
	october,
	november,
	december;
	

}
public class CheckDaysInMonth {

	public static void main(String[] args) throws InvalidMonth  {
   Scanner take= new Scanner(System.in);
	
	String  month_name =take.nextLine();
	
	
		

	Month month=Month.valueOf(month_name);
	

   System.out.println("the number of the days in "+month.name());
   
   


	
	
	}
}
