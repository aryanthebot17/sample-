package learning_java;

import java.util.ArrayList;
import java.util.List;
import java.util.Optional;
//public class Employee implements Comparable<Employee> {
import java.util.stream.Collectors;

public class Employee {
	private int code;
	private String empname;
	private int salary;
	
	public Employee() {
		
	}
	public Employee(int code , String empname, int salary) {
		
		this.code=code;
		this.empname=empname;
		this.salary=salary;
		
	}
	
	public int getCode() {
		return code;
				
	}
	public String getEmpname() {
		return empname;
	}
	public int getSalary() {
		return salary;
	}
	
	public void setCode(int code) {
		this.code=code;
	}
	
	public void getName() {
		System.out.println(this.empname);
	}
	
//	@Override
//	public int compareTo(Employee emp) {
//		int diff= this.code-emp.getCode();
//		return diff;
//	}
	
	


	
	public static void main(String[] args) {
		
	ArrayList<Employee> list =new  ArrayList<Employee>();
	
	Employee a = new Employee(1,"aryan",10000);
	Employee b=  new Employee(2,"sudhanshu",110);
	Employee c= new Employee(3,"sumit",100);
	
	list.add(a);
	list.add(b);
	list.add(c);
	System.out.println("hello");
	
	
	
	
	for(Employee emp: list) {
	System.out.println("hello");
	emp.getName();
	}
	
	
	List<Employee> emp12 = list.stream().filter((emp)->emp.getSalary()>7).map((e)->e).collect(Collectors.toList());
	
	System.out.println("here");
	System.out.println(emp12);
	
	Optional<Employee> emp21=list.stream().filter((emp)->emp.getCode()==3).map(e->e).findFirst();
	
	System.out.println(emp21);
	}
}
